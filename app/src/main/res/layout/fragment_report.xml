<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0F"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/segmentedCharts"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_segment_container"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnBalance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_selected"
            android:gravity="center"
            android:text="Баланс"
            android:textColor="#EAF0FF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnIncome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_unselected"
            android:gravity="center"
            android:text="Доходы"
            android:textColor="#9AA3B2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnExpense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_segment_unselected"
            android:gravity="center"
            android:text="Расходы"
            android:textColor="#9AA3B2"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvDateRange"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_pill"
        android:gravity="center"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="01 июл - 31 дек, 2025"
        android:textColor="#EAF0FF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/segmentedCharts"
        app:layout_constraintStart_toStartOf="parent" />
    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvDateRange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
